<div class="container-md">
    <h1 class="mt-4 mb-4 bg-opacity-8 border rounded text-center">Perfil de Usuario</h1>

    <div class="mt-4 pt-3 mb-4 bg-opacity-8 border rounded text-center">
        <h3>Bienvenido {{user.name}}</h3>
        <p>Nombre: {{user.name}}</p>
        <p>Email: {{user.email}}</p>
        <p>Edad: {{user.age}}</p>
        <div class="d-flex justify-content-center">
            <p>Rol: {{user.role}}</p>
            <button
            id="changeRole"
            data-user-id="{{user.id}}"
            data-user-rol="{{user.role}}"
            class="btn btn-outline-secondary mx-3"
            >Modificar Rol</button>
        </div>
        <p> IdCart: {{user.cart}} </p>
        <button id="logout" class="btn btn-outline-secondary mb-3">
            Cerrar sesi√≥n</button>
    </div>
</div>
